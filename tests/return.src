/// RUN: %srcc --hlir %s | FileCheck %s

/// CHECK:      func.func private @trivial
/// CHECK-NEXT: [[C1:%[0-9a-z_]+]] = arith.constant 4
/// CHECK-NEXT: return [[C1]]
///proc trivial -> int { return 4; }

/// CHECK:      func.func private @abbr
/// CHECK-NEXT: [[C2:%[0-9a-z_]+]] = arith.constant 4
/// CHECK-NEXT: return [[C2]]
///proc abbr = 4;

/// CHECK:      func.func private @abbr2
/// CHECK-NEXT: [[C3:%[0-9a-z_]+]] = arith.constant 4
/// CHECK-NEXT: return [[C3]]
///proc abbr2 -> int = 4;

/// TODO: Support unstructured `if-else`.
proc if_nested (bool a) -> int {
    if a {
        return 42;
    } elif a {
        if a return 42;
        else return 3;
    } else {
        if a return 3;
        elif a {}
        else return 42;
        return 6;
    }
}