/// + cf.br (?<JOIN_2>$b)($CONST_42_2
/// + $FALSE_2:
/// + (?<A_2>$t) = hlir.load $A
/// + cf.br $JOIN_2($A_2
/// + $JOIN_2((?<IF_2>$t)
/// + hlir.store into $C : [^%]+, $IF_2
int c = if true { 42 } else { a };

/// * (?<D>$t) = hlir.local_var
/// + (?<T_3>$t) = arith.constant false
/// + cf.cond_br $T_3, (?<TRUE_3>$b), (?<FALSE_3>$b)
/// + $TRUE_3:
/// + cf.br (?<JOIN_3>$b)($B
/// + $FALSE_3:
/// + cf.br $JOIN_3($C
/// + $JOIN_3((?<IF_3>$t)
/// + hlir.store into $D : [^%]+, $IF_3
int& d = if false { b } else { c };

/// + (?<T_4>$t) = arith.constant true
/// + cf.cond_br $T_4, (?<TRUE_4>$b), (?<JOIN_4>$b)
/// + $TRUE_4:
/// + (?<A_3>$t) = hlir.load $A
/// + hlir.store into $A : [^%]+, $A_3
/// + cf.br $JOIN_4
/// + $JOIN_4:
if true then a = a;
