/// R %srcc %s --hlir

/// d t %[a-zA-Z0-9]+

/// * hlir.string 0, "Hello, world!\\00"
/// * (?<str>$t) = global_ref @".str.data.0"
/// + (?<ptr>$t) = array_decay $str to ref i8
/// + (?<len>$t) = index.constant 13
/// + (?<slc>$t) = literal slice ref i8 $ptr, $len
/// + (?<dat>$t) = slice_data i8\[\] $slc
/// + $t = call @puts($dat)
puts "Hello, world!".data;

/// * hlir.func external @puts
proc puts (i8&) extern nomangle -> i32;